{
  "useTabs": false,
  "printWidth": 100,
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "package.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
